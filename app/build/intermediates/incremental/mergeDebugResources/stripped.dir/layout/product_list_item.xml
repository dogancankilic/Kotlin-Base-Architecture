<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    

                 
                       
                                                                                              


           

    <com.google.android.material.card.MaterialCardView
        android:layout_margin="5dp"
        app:strokeColor="@color/purple_200"
        app:cardElevation="10dp"
        app:rippleColor="@color/orange"
        app:cardCornerRadius="3dp"
        android:layout_width="200dp"
        android:layout_height="300dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" android:tag="layout/product_list_item_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/llMain"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:tag="binding_1"       
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/ivProduct"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:src="@mipmap/demo">

            </ImageView>


            <TextView
                android:id="@+id/tvProductTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="40dp"
                android:ellipsize="end"
                android:tag="binding_2"     
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ivProduct"
                tools:text="Lock and Love Women's Removable Hooded Faux Leather Moto Biker Jacket" />

            <TextView
                android:id="@+id/tvProductPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginStart="8dp"
                android:ellipsize="end"
                android:maxLines="3"
                android:tag="binding_3"     
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvProductTitle"
                app:layout_constraintVertical_bias="0.859"
                tools:text="102" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>


         